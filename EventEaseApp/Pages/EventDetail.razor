@page "/eventdetail/{Id:int}"
@using EventEaseApp.Components
@inject EventService EventService;

<EventCard EventModel="EventModel" DisplayShort="false" IsEditable ="true"/>

@code {

    [Parameter]
    public int Id { get; set; }
    private EventModel EventModel { get; set; } = new EventModel();

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(100); // Simulate an async operation
        EventModel = EventService.Events?.FirstOrDefault(e => e.Id == Id) ?? new EventModel();
    }
}
