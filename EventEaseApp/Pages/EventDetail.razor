@page "/eventdetail/{Id:int}"
@using EventEaseApp.Components
@inject EventService EventService;

<EventCard Event="Event" DisplayShort="false" IsEditable ="true"/>

@code {

    [Parameter]
    public int Id { get; set; }
    private Event? Event { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(100); // Simulate an async operation
        Event = EventService.Events.FirstOrDefault(e => e.Id == Id) ?? new Event();
    }
}
